<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
      android:background="@drawable/task_background">

    <TableRow
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:padding="3sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btLeft1"
            android:layout_column="0"
            android:layout_marginRight="30px"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/todolist"
            android:layout_weight="1" />

        <ImageView
            android:padding="25dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btRight1"
            android:layout_column="1"
            android:layout_marginLeft="30px"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/journal_3" />
    </TableRow>

    <TableRow
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:padding="3sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btLeft2"
            android:layout_column="0"
            android:layout_marginRight="30px"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/photoalbum2"
            android:layout_weight="1" />

        <ImageView
            android:padding="5sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btRight2"
            android:layout_column="1"
            android:layout_marginLeft="30px"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/wishlist"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btLeft3"
            android:layout_column="0"
            android:layout_marginRight="30px"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/calendarholic_1" />

        <ImageView
            android:padding="3sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btRight3"
            android:layout_column="1"
            android:layout_marginLeft="30px"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/petactivity_1"
            android:scaleType="centerCrop"/>
    </TableRow>

</TableLayout>