<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context=".CalendarViewActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="#E0CCFFFF"
        android:gravity="center_vertical" >


           <ImageView

            android:id="@+id/btn_prev_month"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/arrow_left"/>



        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_weight="5">
                <TextView
                    android:paddingRight="8dp"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="feburary 2013"
                    android:textColor="#000000"
                    android:textSize="21.0dip"
                    />
            </LinearLayout>
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_weight="1"
                 android:gravity="right">

                <ImageView
                    android:visibility="invisible"
                    android:padding="2dp"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:scaleType="centerCrop"
                    android:gravity="center"
                    android:src="@drawable/plus2"
                    android:id="@+id/calendar_todo" />

            </LinearLayout>
        </LinearLayout>


         <ImageView
            android:id="@+id/btn_next_month"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/arrow_right"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#50CCFFFF"
        android:padding="3dp">

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="Sun"
            android:textColor="#000000"
            android:textSize="14.0dip" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="Mon"
            android:textColor="#000000"
            android:textSize="14.0dip" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="Tue"
            android:textColor="#000000"
            android:textSize="14.0dip" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="Wed"
            android:textColor="#000000"
            android:textSize="14.0dip" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="Thu"
            android:textColor="#000000"
            android:textSize="14.0dip" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="Fri"
            android:textColor="#000000"
            android:textSize="14.0dip" />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="Sat"
            android:textColor="#000000"
            android:textSize="14.0dip" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/winter" >

        <GridView
            android:id="@+id/gridview"
            android:layout_width="fill_parent"
            android:layout_height="370dp"
            android:clickable="true"
            android:clipChildren="true"
            android:verticalSpacing="2dp"
            android:horizontalSpacing="2dp"
            android:numColumns="7"
            android:listSelector="#FFFFFF"

            android:layout_weight="1"
           >

        </GridView>

        <ListView
            android:id="@+id/dailyView1"
            android:layout_width="match_parent"
            android:layout_height="180dp"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_below="@+id/gridview"
            android:clickable="true"
            android:focusable="true"
            />
</LinearLayout>


</LinearLayout>